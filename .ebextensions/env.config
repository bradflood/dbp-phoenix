# Including the options as options.config generates an error, because the
# total size must be less than 4096 bytes.


files:
  # Pull env.config from S3
  /var/app/.env:
    mode: "000755"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-east-2-627672411722.s3.us-east-2.amazonaws.com/dbp-phoenix/dbp-api/env

  # Pull keypair from s3
  /var/app/pk-APKAI4ULLVMANLYYPTLQ.pem:
    mode: "000755"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-east-2-627672411722.s3.us-east-2.amazonaws.com/dbp-phoenix/dbp-api/private.pem

  /var/app/rsa-APKAI4ULLVMANLYYPTLQ.pem:
    mode: "000755"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-east-2-627672411722.s3.us-east-2.amazonaws.com/dbp-phoenix/dbp-api/public.pem

  "/opt/elasticbeanstalk/hooks/appdeploy/enact/01-copy-env.sh":
    mode: "000755"
    content: |
      #!/bin/bash
      cp /var/app/.env /var/app/ondeck/.env

      echo "APP_SERVER_NAME=$(curl http://169.254.169.254/latest/meta-data/instance-id)" >> /var/app/ondeck/.env
      echo "API_URL=$(/opt/elasticbeanstalk/bin/get-config environment -k API_URL)" >> /var/app/ondeck/.env

      chown webapp:webapp /var/app/ondeck/.env
      mkdir -p /var/app/ondeck/storage/app && cp /var/app/{rsa,pk}-APKAI4ULLVMANLYYPTLQ.pem $_
      chown webapp:webapp /var/app/ondeck/storage/app/{rsa,pk}-APKAI4ULLVMANLYYPTLQ.pem
